{
    $
        var md = {
            name: "ppt",
            description: "Ppt document"
        }
    
    base-plugin( &md )

    [ globals
        $*
        {
            name "___"
            value "___"
            type "string"
        *$

    [ BuildVars
        {
            name "usePptxgenjs"
            value "true"
            type "boolean"

    [ Schemas
        {
            name "${md.name}"
            plugin_type "syntax_structure"
            hasWizzifier false
            { wizzifier
            [ includes
            [ transformers
            [ artifacts
                {
                    name "document"
                    outmime "${md.name}"
                    isDefault true
                    contentType "appication/${md.name}"
            [ fileExtensions
                "${md.name}"