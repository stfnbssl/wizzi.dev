{
    $
        var md = {
            name: "pandoc",
            description: "Pandoc documents"
        }
    
    base-plugin( &md )

    [ globals
        $*
        {
            name "___"
            value "___"
            type "string"
        *$

    [ BuildVars
        $*
        {
            name "___"
            value "___"
            type "string"
        *$

    [ Schemas
        {
            name "pandoc"
            plugin_type "syntax_structure"
            hasWizzifier false
            { wizzifier
            [ includes
            [ transformers
            [ artifacts
                {
                    name "document"
                    outmime "json"
                    isDefault true
                    contentType "application/json"
            [ fileExtensions
                $*
                "docx"
                "html"
                "md"
                "pdf"
                "pptx"
                *$