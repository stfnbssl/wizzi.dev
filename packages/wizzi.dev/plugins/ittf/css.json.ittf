{
    $
        var md = {
            name: "css",
            description: "Css language"
        }
    
    base-plugin( &md )

    [ globals
        $*
        {
            name "___"
            value "___"
            type "string"
        *$

    [ BuildVars
        {
            name "useCssParser"
            value "true"
            type "boolean"
        {
            name "usePostCss"
            value "true"
            type "boolean"
    
    [ Schemas
        {
            name "${md.name}"
            plugin_type "syntax_structure"
            hasNamespaces false
            hasTextContents false
            multiLineCommentBegin "/*"
            multiLineCommentEnd "*/"
            hasWizzifier true
            hasCheatsheetFolder true
            { wizzifier
                [ parserImportCode
                    "var ${md.name}_parser = require('${md.name}/language/parser')"
                [ parserInvokeCode
                    " _ ${md.name}_parser.parse(tobeWizzified)"
                useFormatAstMethods false
            [ includes
                {
                    Name "Svg"
                    name "svg"
                    artifactName "svg/document"
                    [ options
                    [ items
                        {
                            name "svg"
                            parent "element"
                            tag "::svg"
                            root "svg"
            [ transformers
            [ artifacts
                {
                    name "document"
                    outmime "${md.name}"
                    contentType "text/css"
                    isDefault true
            [ fileExtensions
                "css"