{
    $
        var md = {
            name: "java",
            description: "Java language"
        }
    
    base-plugin( &md )

    [ globals
        $*
        {
            name "___"
            value "___"
        *$

    [ BuildVars
        $*
        {
            name "___"
            value "___"
        *$

    [ Schemas
        {
            name "${md.name}"
            rootElement "xmodule"
            rootTag "module"
            plugin_type "syntax_structure"
            hasNamespaces false
            hasTextContents false
            [ includes
            [ transformers
            [ artifacts
                {
                    name "module"
                    outmime "${md.name}"
                    contentType "text/${md.name}"
                    isDefault true
            [ fileExtensions
                "${md.name}"

