{
    $
        var md = {
            name: "raml",
            description: "Raml document"
        }
    
    base-plugin( &md )

    [ globals
        $*
        {
            name "___"
            value "___"
            type "string"
        *$

    [ BuildVars
        $*
        {
            name "___"
            value "___"
            type "string"
        *$

    [ Schemas
        {
            name "${md.name}"
            plugin_type "data"
            hasNamespaces true
            hasTextContents true
            [ includes
            [ transformers
            [ artifacts
                {
                    name "document"
                    outmime "${md.name}"
                    contentType "text/plain"
                    isDefault true
            [ fileExtensions
                "${md.name}"

    [ Utils
        "useInflection"
        "useParseUrl"
